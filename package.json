    "@types/express-session": "^1.18.2",
    "@types/redis": "^4.0.11",
    "axios": "^1.7.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "connect-redis": "^6.1.3",
    "decimal.js": "^10.6.0",
    "ethers": "^6.15.0",
    "express-session": "^1.18.2",
    "googleapis": "^155.0.1",
    "ioredis": "^5.7.0",
